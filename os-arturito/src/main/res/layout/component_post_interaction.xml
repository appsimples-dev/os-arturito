<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">

        <include
            android:id="@+id/post_cell_button0"
            layout="@layout/component_interaction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/post_cell_button1"
            layout="@layout/component_interaction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:clickable="true"
            app:layout_constraintLeft_toRightOf="@id/post_cell_button0" />

        <include
            android:id="@+id/post_cell_button2"
            layout="@layout/component_interaction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:clickable="true"
            app:layout_constraintLeft_toRightOf="@id/post_cell_button1" />

        <include
            android:id="@+id/post_cell_button3"
            layout="@layout/component_interaction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:clickable="true"
            app:layout_constraintEnd_toStartOf="@id/post_cell_button4" />

        <include
            android:id="@+id/post_cell_button4"
            layout="@layout/component_interaction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>

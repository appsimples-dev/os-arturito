<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/interaction_button"
        android:layout_width="wrap_content"
        android:layout_height="34dp">

        <ImageView
            android:id="@+id/interaction_button_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/interaction_button_text"
            style="@style/BaseText.PostSubTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/interaction_button_icon"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>